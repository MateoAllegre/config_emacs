#!/usr/bin/bash
# nbp=4
# nbc=8

# if [ $# -ne 2 ]; then
    # echo "Mauvais nombre d'arguments, il en faut exactement deux"
    # exit 1
# fi

case $# in
    0)
	nbp=4
	nbc=8
	;;
    1)
	nbp=1
	nbc=$1
	;;
    2)
	nbp=$1
	nbc=$2
	;;
    *)
	echo "Erreur sur le nombre d'arguments (doit être inférieur ou égal à 2)"
	exit 1
esac

tube="/tmp/tubePC"
[ ! -e $tube ] && mkfifo $tube
for i in $(seq 1 $nbp)
do
    ./producteur.sh 2>&1 >/tmp/tubePC &
done

for i in $(seq 1 $nbc)
do
    ./consommateur.sh 2>&1 </tmp/tubePC &
done

wait
echo "fini"
rm $tube
